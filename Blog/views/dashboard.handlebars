<div class="blog-card">
    <div class="blog-card-header">
        <h1>Create a New Blog Post</h1>
    </div>
    <div id="blog-body">
        <form id="blog-form">
            <div class="mb-3">
                <label for="blog-label" class="form-label">Title:</label>
                <input class="form-control" type="text" id="blog-label" required />
            </div>
            <div class="mb-3">
                <label for="blog-content" class="form-label">Content:</label>
                <textarea class="form-control" style="width: 75%; height: 100px" id="blog-content" required></textarea>
            </div>
            <button id="createBlogSubmit" type="submit" class="btn btn-primary">Create Blog Post</button>
        </form>
    </div>
</div>
